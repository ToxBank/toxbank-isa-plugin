    <build>
        <plugins>

            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.0.0</version>
                <extensions>true</extensions>

                <configuration>
                    <instructions>
                        <Import-Package>
                                org.apache.commons.logging.*,
                                !org.apache.axis.*,
                        		!com.sun.jdmk.*,
                        		!javax.mail.*,
                        		!org.junit.*, <!-- Why junit runtime?  -->
                        		!com.sun.msv.*,
                        		!javax.jms.*,
                        		!junit.*, <!-- uk.ebi.ac:ols has compile junit dependency -->
                        		!org.relaxng.*, 
                        		!org.apache.xml.resolver.*,
                        		!com.hp.hpl.jena.util.junit.*, <!-- Why junit runtime?  -->
                        		!javax.jmdns.*,
                        		!sun.io.*,
                        		!com.hp.hpl.jena.sparql.modify.op.*,  <!-- This is not found in arq after version 2.8.3  -->
                        		!com.ibm.uvm.tools.*,
                        		!com.hp.hpl.jena.sparql.lang.sparql.*, <!-- Who is using ancient arq-2* ??? -->
                        		!org.apache.log.*, <!-- What's this ???  -->
                        		*</Import-Package> 
                        <Export-Package>net.toxbank.isa.creator.plugin</Export-Package>
                        <Bundle-Activator>net.toxbank.isa.creator.plugin.Activator</Bundle-Activator>
                        <Embed-Dependency>
                        	*;scope=compile|runtime
                        	<!-- 
                			toxbank-client-java;scope=compile,                           
                			httpclient;scope=compile,
                			httpcore;scope=compile,
                			commons-codec;scope=compile,
                			httpmime;scope=compile,
                			apache-mime4j;scope=compile,
                			toxbank-api-beans;scope=compile,
                			jena;version=2.6.4;scope=compile,
                			icu4j;scope=compile,
                			xercesImpl;scope=compile,
                			arq;version=2.8.7;scope=compile,
                			wstx-asl;scope=compile,
                			stax-api;version=1.0.1;scope=compile,
                			lucene-core;scope=compile,
                			log4j;scope=compile,
                			iri;version=0.8;scope=compile,
                			arq-extra;version=2.7.0;scope=compile,
                			opentox-opensso;scope=compile,
                			jutils;scope=compile,
                			xerces;scope=compile,
                			xml-commons-resolver;scope=compile,                			xml-resolver;scope=compile,
                			slf4j-api;scope=compile,
							slf4j-log4j12;scope=compile
							 -->            			 	
            			</Embed-Dependency>

            			<Embed-Transitive>true</Embed-Transitive>
		
                        <Bundle-Vendor>ToxBank</Bundle-Vendor>
                    </instructions>
                </configuration>
				
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                    <executable>apt</executable>
                    <fork>true</fork>
                    <debug>true</debug>
                    <compilerArguments>
                        <s>${project.build.directory}</s>
                    </compilerArguments>
                    <meminitial>128m</meminitial>
                    <maxmem>512m</maxmem>
                </configuration>
            </plugin>

        </plugins>
    </build>

